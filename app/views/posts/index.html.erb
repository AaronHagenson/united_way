

<div class="large_wrapper">

  <div class="section group"> <!-- row 1 -->
    <div class="col span_1_of_3">
      <div class="sub_heading">
        <h3>News</h3>
      </div>
    </div>
    
    <div class="col span_1_of_3">
      <div class="sub_heading">
        <h3>Features</h3>
      </div>
    </div>
    
    <div class="col span_1_of_3">
      <div class="sub_heading">
        <h3>Calendar</h3>
      </div>
    </div>
  </div> <!--end of row 1 -->





  <% @posts.each do |post| %>
    <div class="section group">
      <div class="col span_1_of_3">
        <div class="post_tile">
          <h2><%= link_to post.title, post %></h2><br>
          <% if post.picture? %>
            <%=link_to image_tag(post.picture.url), post %>
          <% else %>
            <%= link_to image_tag("defaultlogo.png"), post %>
          <% end %>
          <p><%= post.summary %></p>
        </div>
      </div>
    </div>   

  <% end %>
  
  
  
  
</div> <!-- end of wrapper -->
