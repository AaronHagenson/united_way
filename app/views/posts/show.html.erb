<div class="small_wrapper">
  <h1> <%= @post.title %> </h1>
  <div class="post_picture">
    <%= image_tag @post.picture.url if @post.picture? %>
  </div>
  <p>
    <%= @post.body.html_safe %>
  </p>
  
  <div class="posted_on">
    Posted on <%=@post.created_at.strftime("%B, %d, %Y") %>
  </div>
  
  <div style="clear: both;"></div>

</div>

